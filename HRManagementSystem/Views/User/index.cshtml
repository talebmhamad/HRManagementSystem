@model List<HRManagementSystem.Web.Models.UserViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">

    <!--  PAGE TITLE  -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-people-fill me-2"></i> Users Management
        </h2>

      
    </div>

    <!--  SUMMARY TILES  -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-people fs-2 text-primary"></i>
                    <h6 class="mt-2">Total Users</h6>
                    <h4>@Model.Count</h4>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-person-check fs-2 text-success"></i>
                    <h6 class="mt-2">Active Users</h6>
                    <h4>@Model.Count(u => u.IsActive)</h4>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <i class="bi bi-person-x fs-2 text-danger"></i>
                    <h6 class="mt-2">Inactive Users</h6>
                    <h4>@Model.Count(u => !u.IsActive)</h4>
                </div>
            </div>
        </div>
    </div>

    <!--  USERS TABLE  -->
    <div class="card shadow-sm">
        <div class="card-header fw-bold">
            Users List
        </div>

        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Employee</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.UserId</td>
                                <td>@user.Username</td>
                                <td>@user.EmployeeName</td>
                                <td>@user.Role</td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit"
                                       asp-route-id="@user.UserId"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No users found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
