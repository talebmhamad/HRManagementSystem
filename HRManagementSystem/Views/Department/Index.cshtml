@model List<HRManagementSystem.Web.Models.DepartmentViewModel>

@{
    ViewData["Title"] = "Department List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Departments</h2>
        <a asp-controller="Department"asp-action="Create"class="btn btn-success"><i class="bi bi-plus-lg me-1"></i> Add New Department</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Department Name</th>
                        <th>Description</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @if (Model != null && Model.Any())
                    {
                        @foreach (var department in Model)
                        {
                            <tr>
                                <td class="align-middle">
                                    <span class="fw-semibold">@department.Name</span>
                                </td>
                                <td class="align-middle">@(string.IsNullOrWhiteSpace(department.Description)? "-": department.Description)
                        </td>
                        <td class="text-center">
                            <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id"class="btn btn-sm btn-outline-primary me-1"><i class="bi bi-pencil"></i> Edit</a>

                                    <form asp-controller="Department"
                                          asp-action="Delete"
                                          asp-route-id="@department.Id"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this department?');">

                                        @Html.AntiForgeryToken()

                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                                    
                        
                        }
                    }

                    else
                    {
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                No departments found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
