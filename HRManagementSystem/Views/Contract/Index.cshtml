@model List<HRManagementSystem.Web.Models.ContractViewModel>

@{
    ViewData["Title"] = "Contract List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Employee Contracts</h2>

        <a asp-controller="Contract"
           asp-action="Create"
           class="btn btn-success">
            <i class="bi bi-plus-lg me-1"></i> New Contract
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Employee</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Base Salary</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Any())
                    {
                        foreach (var contract in Model)
                        {
                            <tr>
                                <td class="align-middle">@contract.EmployeeName</td>
                                <td class="align-middle">@contract.StartDate.ToString("yyyy-MM-dd")</td>
                                <td class="align-middle">
                                    @(contract.EndDate.HasValue? contract.EndDate.Value.ToString("yyyy-MM-dd"): "-")
                                </td>
                                <td class="align-middle">@contract.BaseSalary.ToString("N2")</td>
                                <td class="align-middle">
                                    @if (contract.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-controller="Contract"
                                       asp-action="Edit"
                                       asp-route-id="@contract.ContractId"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No contracts found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
