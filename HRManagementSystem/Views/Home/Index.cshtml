@{
    ViewData["Title"] = "HR Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="~/css/home.css" rel="stylesheet" />


<div class="container-fluid px-1 mt-4">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 fw-bold">System Overview</h1>
     
    </div>

    <div class="row g-4">
        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-primary h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Employees</div>
                            <div class="h3 mb-0 fw-bold">128</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-info h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Departments</div>
                            <div class="h3 mb-0 fw-bold">7</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-warning h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">On Leave Today</div>
                            <div class="h3 mb-0 fw-bold">4</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-minus fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-success h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Attendance Rate</div>
                            <div class="h3 mb-0 fw-bold">87%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Attendance Summary (Daily)</h6>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="small text-muted mb-1">Present <span class="float-end">112</span></div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 87%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="small text-muted mb-1">Absent <span class="float-end">9</span></div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 7%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="small text-muted mb-1">Late <span class="float-end">7</span></div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 6%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Pending Actions</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div><i class="fas fa-envelope-open-text me-2 text-warning"></i> Leave Requests</div>
                            <span class="badge rounded-pill bg-warning text-dark">3</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div><i class="fas fa-file-contract me-2 text-danger"></i> Contracts Expiring</div>
                            <span class="badge rounded-pill bg-danger">2</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div><i class="fas fa-clock me-2 text-secondary"></i> Missing Attendance</div>
                            <span class="badge rounded-pill bg-secondary">5</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2 mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-dark"><i class="fas fa-umbrella-beach me-2"></i>Upcoming Holidays</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="icon-shape bg-light-primary me-3">📅</div>
                        <div>
                            <p class="mb-0 fw-bold">Independence Day</p>
                            <small class="text-muted">June 25, 2024</small>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="icon-shape bg-light-danger me-3">🏢</div>
                        <div>
                            <p class="mb-0 fw-bold">Company Shutdown</p>
                            <small class="text-muted">Jul 01 - Jul 03, 2024</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-dark"><i class="fas fa-dollar-sign me-2"></i>Payroll Status</h6>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col">
                            <span class="small text-muted d-block">Total Budget</span>
                            <span class="h5 fw-bold">$124,300</span>
                        </div>
                        <div class="col border-start">
                            <span class="small text-muted d-block">Progress</span>
                            <span class="h5 fw-bold text-success">95 / 128</span>
                        </div>
                    </div>
                    <div class="progress" style="height: 12px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 74%"></div>
                    </div>
                    <small class="text-muted mt-2 d-block text-center">33 Employees pending calculation</small>
                </div>
            </div>
        </div>
    </div>

</div>