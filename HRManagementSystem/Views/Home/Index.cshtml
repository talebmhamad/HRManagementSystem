@model Dictionary<string, int>

@{
    ViewData["Title"] = "HR Dashboard";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="~/css/home.css" rel="stylesheet" />


<div class="container-fluid px-1 mt-4">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 fw-bold">System Overview</h1>
     
    </div>

    <div class="row g-4">
        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-primary h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Total Employees</div>
                            <div class="h3 mb-0 fw-bold">@Model["TotalEmployees"]</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-info h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Departments</div>
                            <div class="h3 mb-0 fw-bold">@Model["Departments"]</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-info h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Active Employees</div>
                            <div class="h3 mb-0 fw-bold">@Model["ActiveEmployees"]</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar-minus fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-success h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Attendance Rate</div>
                            <div class="h3 mb-0 fw-bold">87%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mt-2">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Attendance Summary (Daily)</h6>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="small text-muted mb-1">Present <span class="float-end">112</span></div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 87%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="small text-muted mb-1">Absent <span class="float-end">9</span></div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-danger" role="progressbar" style="width: 7%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="small text-muted mb-1">Late <span class="float-end">7</span></div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-warning" role="progressbar" style="width: 6%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Pending Actions</h6>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div><i class="fas fa-envelope-open-text me-2 text-warning"></i> Leave Requests</div>
                            <span class="badge rounded-pill bg-warning text-dark">3</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div><i class="fas fa-file-contract me-2 text-danger"></i> Contracts Expiring</div>
                            <span class="badge rounded-pill bg-danger">@Model["ExpiringContracts"]</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center py-3">
                            <div><i class="fas fa-clock me-2 text-secondary"></i> Missing Attendance</div>
                            <span class="badge rounded-pill bg-secondary">5</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

   
</div>