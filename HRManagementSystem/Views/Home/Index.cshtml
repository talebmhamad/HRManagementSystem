@model Dictionary<string, int>

@{
    ViewData["Title"] = "HR Dashboard";

    int present = Model.ContainsKey("Present") ? Model["Present"] : 0;
    int absent = Model.ContainsKey("Absent") ? Model["Absent"] : 0;
    int late = Model.ContainsKey("Late") ? Model["Late"] : 0;
    int missing = Model.ContainsKey("MissingAttendance") ? Model["MissingAttendance"] : 0;
    int totalAttendance = present + absent + late;
    int presentPercent = totalAttendance == 0 ? 0 : (present * 100 / totalAttendance);
    int absentPercent = totalAttendance == 0 ? 0 : (absent * 100 / totalAttendance);
    int latePercent = totalAttendance == 0 ? 0 : (late * 100 / totalAttendance);
    int activeEmployees = Model["ActiveEmployees"];
    int attendanceRate = activeEmployees == 0 ? 0 : (present * 100 / activeEmployees);
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="~/css/home.css" rel="stylesheet" />

<div class="container-fluid px-1 mt-4">

    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800 fw-bold">System Overview</h1>
    </div>

    <div class="row g-4">

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-primary h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-primary text-uppercase mb-1">
                                Total Employees
                            </div>
                            <div class="h3 mb-0 fw-bold">
                                @Model["TotalEmployees"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-info h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-info text-uppercase mb-1">
                                Departments
                            </div>
                            <div class="h3 mb-0 fw-bold">
                                @Model["Departments"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-building fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-secondary h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-secondary text-uppercase mb-1">
                                Active Employees
                            </div>
                            <div class="h3 mb-0 fw-bold">
                                @Model["ActiveEmployees"]
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-check fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card shadow-sm border-0 border-left-success h-100 py-2">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col">
                            <div class="text-xs fw-bold text-success text-uppercase mb-1">
                                Attendance Rate
                            </div>
                            <div class="h3 mb-0 fw-bold">
                                @attendanceRate%
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <div class="row g-4 mt-2">

        <div class="col-lg-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        Attendance Summary (Daily)
                    </h6>
                </div>
                <div class="card-body">

                    <div class="mb-4">
                        <div class="small text-muted mb-1">
                            Present <span class="float-end">@present</span>
                        </div>
                        <div class="progress" style="height:8px">
                            <div class="progress-bar bg-success"
                                 style="width:@presentPercent%"></div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="small text-muted mb-1">
                            Absent <span class="float-end">@absent</span>
                        </div>
                        <div class="progress" style="height:8px">
                            <div class="progress-bar bg-danger"
                                 style="width:@absentPercent%"></div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <div class="small text-muted mb-1">
                            Late <span class="float-end">@late</span>
                        </div>
                        <div class="progress" style="height:8px">
                            <div class="progress-bar bg-warning"
                                 style="width:@latePercent%"></div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-white py-3">
                    <h6 class="m-0 fw-bold text-primary">
                        Pending Actions
                    </h6>
                </div>

                <div class="card-body p-0">
                    <div class="list-group list-group-flush">

                        <a class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div>
                                <i class="fas fa-file-contract me-2 text-danger"></i>
                                Contracts Expiring
                            </div>
                            <span class="badge rounded-pill bg-danger">
                                @Model["ExpiringContracts"]
                            </span>
                        </a>

                        <a class="list-group-item d-flex justify-content-between align-items-center py-3">
                            <div>
                                <i class="fas fa-clock me-2 text-secondary"></i>
                                Missing Attendance
                            </div>
                            <span class="badge rounded-pill bg-secondary">
                                @missing
                            </span>
                        </a>

                    </div>
                </div>
            </div>
        </div>

    </div>

</div>
