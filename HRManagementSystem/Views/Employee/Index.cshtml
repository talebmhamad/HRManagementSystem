@model List<HRManagementSystem.Web.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Employee Directory</h2>

        <a asp-controller="Employee"
           asp-action="Create"
           class="btn btn-success">
            <i class="bi bi-plus-lg me-1"></i> Add New Employee
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>First Name</th>
                        <th>Department</th>
                        <th>Email Address</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                     @if (Model.Any())
                    {
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td class="align-middle">@employee.FirstName</td>
                            <td class="align-middle">
                                <span class="badge bg-info text-dark">@employee.Department</span>
                            </td>
                            <td class="align-middle">@employee.Email</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-outline-secondary">View</button>
                                <button class="btn btn-sm btn-outline-danger">Delete</button>
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                No users found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>